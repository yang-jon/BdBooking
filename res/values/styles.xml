<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_pressed</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/bd_title_height</item>
    </style>

    <style name="style_app_headtitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_rating_normal" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/drawable_ratable</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>
    
    <style name="style_rating_company" parent="@style_rating_normal">
        <item name="android:progressDrawable">@drawable/company_ratingbar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>
    
      <style name="style_rating_secondary" parent="@style_rating_normal">
        <item name="android:progressDrawable">@drawable/secondary_rating</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>
    
    <style name="style_rating_worker" parent="@style_rating_normal">
        <item name="android:progressDrawable">@drawable/worker_rating</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

	<style name="style_company_logo">
	    <item name="android:layout_marginLeft">@dimen/bd_company_logo_paddingLR</item>
	    <item name="android:layout_marginRight">@dimen/bd_company_logo_paddingLR</item>
	    <item name="android:layout_marginBottom">@dimen/bd_company_logo_paddingTB</item>
	    <item name="android:layout_marginTop">@dimen/bd_company_logo_paddingTB</item>
	    <item name="android:layout_width">@dimen/bd_company_logo_width</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_height">@dimen/bd_company_logo_height</item>
	</style>
	
	<style name="style_company_sort_button">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
	
	<style name="style_text_menu">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	    <item name="android:nextFocusRight">@id/btn_sort_def</item>
	    <item name="android:focusable">true</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/bd_text_view_bg</item>
	</style>
    
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/grid_bg"
            android:id="@+id/iv_saleicon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">
            
        </ImageView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店名"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:layout_alignTop="@+id/iv_saleicon"
            android:layout_toRightOf="@+id/iv_saleicon"
            android:layout_toEndOf="@+id/iv_saleicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:id="@+id/phone"
            android:textColor="#000000"
            android:layout_below="@+id/place"
            android:layout_alignLeft="@+id/place"
            android:layout_alignStart="@+id/place" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:id="@+id/place"
            android:textColor="#000000"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignBottom="@+id/iv_saleicon"
            android:gravity="center_vertical" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_rating_normal"
            android:numStars="4"
            android:rating="5"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" />


    </RelativeLayout>




</LinearLayout>
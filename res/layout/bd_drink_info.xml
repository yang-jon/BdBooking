<?xml version="1.0" encoding="utf-8"?>
<booking.bd.com.bdbooking.item.BdDrinkInfoItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
	<ImageView 
	    android:id="@+id/iv_drink_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginTop="30dp"
	    android:layout_marginBottom="30dp"
	    android:layout_marginRight="10dp"
	    android:src="@drawable/ic_launcher"
	    android:layout_alignParentLeft="true"/>
	
	<TextView 
	    android:id="@+id/tv_drink_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/iv_drink_img"
	    android:layout_alignTop="@id/iv_drink_img"
	    android:text="农夫山泉饮用水"/>
	
	
	<TextView 
	    android:id="@+id/tv_drink_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="¥29.00"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/iv_drink_img"
	    android:layout_below="@id/tv_drink_name"/>
	
	
	<TextView 
	    android:id="@+id/tv_drink_sold"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="最近售出：7"
	    android:layout_toRightOf="@id/iv_drink_img"
	    android:layout_alignBottom="@id/iv_drink_img"/>
    
</booking.bd.com.bdbooking.item.BdDrinkInfoItemView>

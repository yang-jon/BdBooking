<?xml version="1.0" encoding="utf-8"?>
<booking.bd.com.bdbooking.item.BdOderFormInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:layout_gravity="center" >

    <View android:layout_width="0px"
        android:layout_height="0px"/>
    
    <RelativeLayout 
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
    	android:background="@drawable/bd_def_bg"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">
        
     	<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bd_secondary_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bd_secondary_bg" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bd_secondary_bg" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bd_secondary_bg" />
        
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="昨天 12:00" />
    
    <Button android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bd_btn_def_bg"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:text="取消订单"/>
    
    <RatingBar android:id="@+id/rb_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/tv_date"
        style="@style/style_rating_secondary"
        android:visibility="gone"/>
    
    <TextView android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/tv_date"
        android:textSize="16sp"
        android:text="评分/未评分"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_date"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="小胡" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_date"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="XXX家政公司" />
    </RelativeLayout>

</booking.bd.com.bdbooking.item.BdOderFormInfoView>